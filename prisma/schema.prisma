generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model users{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  tset tsets[]
  audio audios[]
  createdAt DateTime @default(now())
}
model tsets{
  id Int @id @default(autoincrement())
  sentance String 
  answer String[]
  userId Int
  user users @relation(fields: [userId],references: [id],onDelete:Cascade)
  audio audios[]
  createdAt DateTime @default(now())
}
model audios{
  id Int @id @default(autoincrement())
  file Bytes
  userId Int
  tsetId Int
  user users @relation(fields: [userId],references: [id],onDelete: Cascade)
  tset tsets @relation(fields: [tsetId],references: [id],onDelete: Cascade)
  createdAt DateTime @default(now())
}